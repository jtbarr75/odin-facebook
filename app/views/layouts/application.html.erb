<!DOCTYPE html>
<html>
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= content_for?(:title) ? yield(:title) : "OdinFacebook" %></title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application' %>
  </head>

  <body>
    <header>
      <%= react_component("Nav", { currentUser: @currentUser }) %>
    </header>
    <%= react_component("Flash/FlashMessages", { messages: flash_messages }) %>
    <div class="container">
      <%= yield %>
    </div>
  </body>
</html>
