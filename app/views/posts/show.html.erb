<div class="row">
  <div class="well col-xs-8">
    <div class="content">
      <p><%= @post.body %></p>
      <%= image_tag @post.picture.url if @post.picture? %>
    </div>
    <i>Posted: <%= @post.created_at.strftime("%b %e, %Y") %> </i>
    <span class="label label-success"><%= pluralize(@post.likes.count, "Like")%></span>
    <% if @post.liked_by?(current_user) %>
      <%= link_to 'Unlike', post_like_path(@post, @post.find_like_from(current_user)), method: :delete, class: "btn btn-xs btn-default"%>
    <% else %>
      <%= link_to 'Like', post_likes_path(@post), method: :post, class: "btn btn-xs btn-primary"%>
    <% end %>
  </div>
</div>
<%= render 'comments/form'%>
<% if @post.comments.any? %>
  <%= render @post.comments.desc %>
<% end %>
