<p>Create a new post</p>

<%= render 'shared/errors', obj: @post%>

<div class="row">
  <div class="col-xs-12">
    <%= form_for([@user, @post], :html => { class: "form-horizontal", role: "form" }) do |f| %>
      <div class='form-group'>
        <div class="control-label col-sm-2">
          <%= f.label :body %>
        </div>
        <div class="col-sm-6">
          <%= f.text_area :body, rows: 2, class: "form-control" %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <%= f.submit class: 'btn btn-primary btn-large' %>
        </div>
      </div>
    <% end %>
  </div>
</div>